<% comments.each do |comment| %>
          <tr>
            <td><%= image_tag comment.user.get_profile_image, size:'50x50' %></td>
            <td><%= comment.comment %></td>
             <td>
              <%= link_to comment.user.name, user_path(comment.user_id) %>
            </td>
            <% if comment.user == current_user %>
                <td id="comment_destroy">
                  <%= link_to 'destroy', book_book_comment_path(book, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_comment_#{comment.id}"%>
                </td>
            <% end %>
          </tr>
        <% end %>